<Window x:Class="RegisterCreditsManageApp.Windows.FogotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegisterCreditsManageApp.Windows"
        xmlns:uc="clr-namespace:RegisterCreditsManageApp.UC"
        mc:Ignorable="d"
        FontFamily="{StaticResource DefaultFontFamily}"
        Background="#1c2340"                
        WindowStartupLocation="CenterScreen"
        Title="FogotPasswordWindow" Height="300" Width="460">
    
    <StackPanel VerticalAlignment="Center" Margin="32">
        <TextBlock Text="Khôi phục mật khẩu." FontSize="18" Foreground="{StaticResource DefaultBlue}" FontWeight="Medium"/>
        <uc:TextBoxPlaceHolder x:Name="textBoxEmail" _PlaceHolder="Email" Margin="0 32 0 32" />
        <Button x:Name="sendBtn" Style="{StaticResource DefaultButtonSubmitSuccess}" Width="60" HorizontalAlignment="Right" Content="Gửi" Click="sendBtn_Click"/>
    </StackPanel>
</Window>
