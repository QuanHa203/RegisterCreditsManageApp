<Window x:Class="RegisterCreditsManageApp.Windows.Server.ServerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegisterCreditsManageApp.Windows.Server"
        mc:Ignorable="d"
        Title="ServerWindow" Height="450" Width="800">

    <Window.Resources>
        <Style x:Key="ThemeModeBtn" TargetType="Button">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Navigation -->
        <Grid Grid.Row="0" Background="{DynamicResource PrimaryBackgroundColor}" Margin="24 0 24 0">
            <Button Style="{DynamicResource ThemeModeBtn}">
                <Viewbox Width="10">
                    <ContentControl ContentTemplate="{DynamicResource BellSvg}"></ContentControl>
                </Viewbox>
            </Button>
        </Grid>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LeftMenu -->
            <StackPanel Grid.Column="0" Background="{DynamicResource LeftMenuBackground}">
                
            </StackPanel>

            <!-- Main -->
            <Frame Grid.Column="1" NavigationUIVisibility="Hidden" Background="{DynamicResource SecondaryBackgroundColor}"></Frame>
        </Grid>
    </Grid>
</Window>
