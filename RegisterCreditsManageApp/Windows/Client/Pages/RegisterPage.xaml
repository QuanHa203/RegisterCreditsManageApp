<Page x:Class="RegisterCreditsManageApp.Windows.Client.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RegisterCreditsManageApp.Windows.Client.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterPage">

    <Grid>
        <DataGrid x:Name="DataGridRegister" Style="{DynamicResource DefaultDataGrid}" CellStyle="{DynamicResource DefaultDataGridCell}" RowStyle="{DynamicResource DefaultDataGridRow}" ColumnHeaderStyle="{DynamicResource DefaultDataGridColumnHeader}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="STT" Binding="{Binding Stt}"/>
                <DataGridTextColumn Header="Mã học phần" Binding="{Binding MaHocPhan}"/>
                <DataGridTextColumn Header="Môn học/ học phần" Binding="{Binding MonHoc}"/>
                <DataGridTextColumn Header="Số tín chỉ" Binding="{Binding SoTinChi}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
